<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.bacteriainc.demo.presentation.ui.CategoryFragment"


        tools:layout="@layout/fragment_item_list">
        <action
            android:id="@+id/action_categoryFragment_to_detailFragment"
            app:destination="@id/detailFragment"

            />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.bacteriainc.demo.presentation.ui.DetailFragment"

        tools:layout="@layout/fragment_detail">
        <argument
            android:name="product"
            app:argType="com.bacteriainc.demo.data.entity.Product" />
    </fragment>
</navigation>